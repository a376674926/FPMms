<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mms_main_item_bg"
    android:descendantFocusability="blocksDescendants"
     >


    <RelativeLayout
         android:id="@+id/item_pre_layout"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         >

         <TextView
             android:id="@+id/mms_list_item_text"
             style="@style/mms_main_item_style"
             android:layout_centerVertical="true"
             android:ellipsize="marquee"
             android:marqueeRepeatLimit="marquee_forever"
             android:scrollHorizontally="true"
             android:layout_marginRight="85dp"
             />
         
         <TextView 
             android:id="@+id/mms_list_item_date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:textColor="@drawable/textcolor_selector"
             android:textSize="30sp"
             android:layout_centerVertical="true"
             />
         
         <ImageView 
             android:id="@+id/mms_list_item_readStatus"
             android:layout_width="12dp"
             android:layout_height="12dp"
             android:layout_toLeftOf="@id/mms_list_item_date"
             android:src="@drawable/icon_unread_hl"
             android:scaleType="centerInside"
             android:layout_centerVertical="true"
             android:contentDescription="@null"
             />
     </RelativeLayout>

</RelativeLayout>
